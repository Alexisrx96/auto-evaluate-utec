{
    "manifest_version": 3,
    "name": "Auto Evaluador UTEC",
    "version": "1.0",
    "description": "Inserta un bot√≥n que autocompleta evaluaciones en el portal de UTEC.",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://portal.utec.edu.sv/*/evaluaciones/emergencia/encuesta.aspx",
                "http://127.0.0.1:5500/eval/",
                "http://127.0.0.1:5500/eval/index.html"
            ],
            "js": [
                "dist/content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png"
        }
    }
}
